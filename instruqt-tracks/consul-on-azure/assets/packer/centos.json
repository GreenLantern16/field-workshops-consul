{
  "variables": {
    "azure_subscription_id": "{{ env `AZURE_SUBSCRIPTION_ID` }}",
    "azure_region": "{{ env `AZURE_REGION` }}"
  },
  "builders": [
    {
      "name": "azure-arm-centos-7",
      "type": "azure-arm",
      "subscription_id": "{{ user `azure_subscription_id` }}",
      "image_publisher": "OpenLogic",
      "image_offer": "CentOS",
      "image_sku": "7.7",
      "os_type": "Linux",
      "managed_image_name": "is-azure-immutable-consul-centos7-{{isotime \"2006-01-02-03-04\"}}",
      "managed_image_resource_group_name": "{{ user `azure_resource_group_name` }}",
      "location": "{{ user `azure_region` }}",
      "vm_size": "Standard_D2_v3",
      "azure_tags": {
        "System": "is-immutable-consul",
        "Product": "Consul",
        "Consul-Version": "{{ user `consul_version` }}",
        "OS": "centos",
        "OS-Version": "7",
        "Release": "{{ user `release` }}",
        "Owner": "{{ user `owner` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{ user `consul_zip` }}",
      "destination": "/tmp/consul.zip"
    },
    {
      "type": "file",
      "source": "files",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/el7.sh"
    },
    {
      "type": "shell",
      "script": "scripts/setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x"
    }
  ]
}
